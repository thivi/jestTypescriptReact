{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "jsx": "react",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist"
    },
    "compileOnSave": false,
    "exclude": ["node_modules", "src/tests", "mocks", "src/setup_test.ts"]
}
